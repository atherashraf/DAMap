{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./lib",
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "declaration": false,

    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,

    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}

